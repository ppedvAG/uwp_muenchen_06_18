<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ResourcenUndStyles">
    <Style TargetType="FrameworkElement" x:Key="globalHeight">
        <Setter Property="Height" Value="30" />
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource globalHeight}">
        <Setter Property="FontSize" Value="{StaticResource globalFontSize}" />
        <Setter Property="FontFamily" Value="Arial" />
        <Setter Property="Foreground" Value="Fuchsia" />
    </Style>
    <Style TargetType="Button"  BasedOn="{StaticResource globalHeight}" x:Key="generalButton">
        <Setter Property="FontSize" Value="30" />
    </Style>
    <Style TargetType="Button" BasedOn="{StaticResource generalButton}" />
    <Style TargetType="Button" BasedOn="{StaticResource generalButton}" x:Key="boldButton">
        <Setter Property="FontWeight" Value="ExtraBold" />
        <Setter Property="IsEnabled" Value="False" />
    </Style>
</ResourceDictionary>
