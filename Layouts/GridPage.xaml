<Page
    x:Class="Layouts.GridPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Layouts"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.25*" />
            <RowDefinition Height="0.5*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <TextBlock>Name:</TextBlock>
        <TextBlock Grid.Row="1">Wohnort:</TextBlock>
        <TextBlock HorizontalAlignment="Left" TextWrapping="NoWrap" TextAlignment="Center" Grid.Row="2" Grid.ColumnSpan="1">Verheiratet:</TextBlock>
        <TextBox Width="100" VerticalAlignment="Top" Grid.Column="1"></TextBox>
        <TextBox Grid.Column="1" Grid.Row="1"></TextBox>
        <ToggleSwitch Grid.Column="1" Grid.Row="2" OnContent="" OffContent="" />
    </Grid>
</Page>
